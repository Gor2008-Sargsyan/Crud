<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="admin">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
             <% obj.forEach(function(justOne) { %>
            <tr class="tr">
                <td><%= justOne._id %></td>
                <td><%= justOne.name %></td>
                <td><a class="update" href="update/<%= justOne._id %>">Update</a></td>
                <td><a class="delete" href="delete/<%= justOne._id %>">Delete</a></td>
            </tr>
        <% }); %>
        </table>
        <div class="form">
            <form class="form" action="/addName" method="post"> 
                <input id="usName" type="text" required name="name" placeholder="Please type your name"><br><br>
                <input id="usPassword" type="password" name="password" placeholder="Please type your Password"><br><br>
                <input id="usEmail" type="email" name="email" placeholder="Please type your email"><br><br>
                <input id="usDate" type="date" name="date" placeholder="Please type your date"><br><br>
                <input id="usNumber" type="number" name="number" placeholder="Please type your number"><br><br>
                <input id="id" type="hidden" name="id" ><br><br>
                <input type="submit" onclick="getVal()" >
            </form>
        </div>
    </div>

</body>
</html>
